{
  "rules": {
    "design-system/component-usage": [
      "error",
      {
        "substitutions": {
          "button": "DSButton"
        }
      }
    ],
    "design-system/deprecation": "error",
    "design-token/colors": "error",
    "design-token/font-family": "error",
    "design-token/font-size": "error",
    "design-token/spacing": "error"
  },
  "tokens": {
    "$version": "1.0.0",
    "color": {
      "primary": {
        "$type": "color",
        "$value": {
          "colorSpace": "srgb",
          "components": [
            0,
            0,
            0
          ]
        }
      }
    },
    "fonts": {
      "sans": {
        "$type": "fontFamily",
        "$value": "Arial"
      }
    },
    "fontSizes": {
      "sm": {
        "$type": "dimension",
        "$value": {
          "dimensionType": "length",
          "value": 12,
          "unit": "px"
        }
      }
    },
    "new-token": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          1,
          1,
          1
        ]
      }
    },
    "NewComponent": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          1,
          1,
          1
        ]
      }
    },
    "old-token": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0,
          0,
          0
        ]
      },
      "$deprecated": {
        "$replacement": "#/new-token"
      }
    },
    "OldComponent": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0,
          0,
          0
        ]
      },
      "$deprecated": {
        "$replacement": "#/NewComponent"
      }
    },
    "spacing": {
      "sm": {
        "$type": "dimension",
        "$value": {
          "dimensionType": "length",
          "value": 4,
          "unit": "px"
        }
      }
    }
  }
}
