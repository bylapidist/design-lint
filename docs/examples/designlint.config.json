{
  "tokens": {
    "colors": {
      "primary": "#ff0000",
      "secondary": "#00ff00"
    },
    "spacing": {
      "sm": 4,
      "md": 8,
      "lg": 16
    },
    "typography": {
      "fontSizes": {
        "base": 16,
        "lg": 24
      },
      "fonts": {
        "sans": "Inter, sans-serif"
      }
    },
    "deprecations": {
      "oldPrimary": { "replacement": "primary" }
    }
  },
  "rules": {
    "design-token/colors": "error",
    "design-token/spacing": "warn",
    "design-token/font-size": "warn",
    "design-token/font-family": "warn",
    "design-system/component-usage": ["error", { "substitutions": { "button": "DSButton" } }],
    "design-system/deprecation": "warn"
  }
}
