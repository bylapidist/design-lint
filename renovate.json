{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "pin",
  "constraints": {
    "node": ">=22"
  },
  "packageRules": [
    {
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"],
      "allowedVersions": "22.x"
    }
  ]
}
