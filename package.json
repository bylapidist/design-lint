{
  "name": "@lapidist/design-lint",
  "version": "4.5.0",
  "description": "Design system linter",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "design-lint": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/postbuild.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "tsx --test tests/**/*.test.ts",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reporter=json-summary tsx --test tests/**/*.test.ts",
    "changeset": "changeset",
    "release": "npm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint:md": "markdownlint '**/*.md'"
  },
  "keywords": [
    "design",
    "linter",
    "cli"
  ],
  "author": "Brett Dorrans <hello@lapidist.net>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/design-lint.git"
  },
  "bugs": {
    "url": "https://github.com/bylapidist/design-lint/issues"
  },
  "homepage": "https://design-lint.lapidist.net",
  "license": "MIT",
  "dependencies": {
    "@vue/compiler-sfc": "3.5.21",
    "chalk": "5.6.0",
    "chokidar": "4.0.3",
    "color-name": "2.0.0",
    "color-string": "2.1.0",
    "fast-levenshtein": "^2.0.6",
    "fast-glob": "3.3.3",
    "find-up": "7.0.0",
    "ignore": "7.0.5",
    "p-limit": "7.1.1",
    "postcss": "8.5.6",
    "postcss-value-parser": "4.2.0",
    "svelte": "5.38.6",
    "write-file-atomic": "6.0.0",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@types/color-name": "2.0.0",
    "@types/fast-levenshtein": "0.0.4",
    "@types/node": "24.3.1",
    "@types/write-file-atomic": "4.0.3",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "c8": "10.1.3",
    "eslint": "9.34.0",
    "markdownlint": "0.38.0",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitepress": "1.6.4"
  },
  "c8": {
    "check-coverage": true,
    "branches": 75,
    "functions": 75,
    "lines": 60,
    "statements": 60
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
