{
  "name": "design-lint-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "npm --workspaces run build",
    "lint": "npm --workspaces run lint",
    "format": "npm --workspaces run format",
    "format:check": "npm --workspaces run format:check",
    "test": "npm --workspaces run test",
    "test:coverage": "npm --workspaces run test:coverage",
    "lint:md": "markdownlint '**/*.md'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "changeset": "changeset",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@types/color-name": "2.0.0",
    "@types/node": "24.3.1",
    "@types/picomatch": "4.0.2",
    "@types/write-file-atomic": "4.0.3",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "c8": "10.1.3",
    "eslint": "9.35.0",
    "markdownlint": "0.38.0",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "vitepress": "1.6.4",
    "typescript": "5.9.2"
  }
}
