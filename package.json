{
  "name": "@lapidist/design-lint",
  "version": "0.5.0",
  "description": "Design system linter",
  "main": "dist/index.js",
  "bin": {
    "design-lint": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "require": "./dist/cli/index.js",
      "import": "./dist/esm/cli/index.js"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "postbuild": "node scripts/postbuild.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "node --require ts-node/register --test tests/**/*.test.ts",
    "test:coverage": "node --require ts-node/register --test tests/**/*.test.ts --experimental-test-coverage",
    "changeset": "changeset",
    "release": "npm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "design",
    "linter",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vue/compiler-sfc": "^3.5.20",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "chalk": "^5.0.0",
    "chokidar": "^4.0.3",
    "color-name": "^2.0.0",
    "p-limit": "^7.0.0",
    "postcss": "^8.5.6",
    "postcss-value-parser": "^4.2.0",
    "svelte": "^5.38.6",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.0",
    "@types/color-name": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "vitepress": "^1.6.4"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
