{
  "name": "@lapidist/design-lint",
  "version": "0.1.1",
  "description": "Design system linter",
  "main": "dist/index.js",
  "bin": {
    "design-lint": "dist/cli/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "node --require ts-node/register --test tests/**/*.test.ts",
    "test:coverage": "node --require ts-node/register --test tests/**/*.test.ts --experimental-test-coverage",
    "changeset": "changeset",
    "release": "changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "design",
    "linter",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vue/compiler-sfc": "^3.5.20",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "postcss": "^8.5.6",
    "svelte": "^5.38.6",
    "typescript": "5.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "vitepress": "^1.6.4"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ]
}
