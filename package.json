{
  "name": "design-lint",
  "version": "0.1.0",
  "description": "Design system linter",
  "main": "dist/index.js",
  "bin": {
    "design-lint": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "jest",
    "changeset": "changeset"
  },
  "keywords": [
    "design",
    "linter",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/postcss-safe-parser": "^5.0.4",
    "chalk": "^4.1.2",
    "fast-glob": "^3.3.2",
    "postcss": "^8.4.31",
    "postcss-safe-parser": "^6.0.0",
    "typescript": "5.3.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.56.0",
    "jest": "^29.6.4",
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
