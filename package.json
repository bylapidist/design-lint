{
  "name": "@lapidist/design-lint",
  "version": "6.0.3",
  "description": "Design system linter",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "design-lint": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --watch tests/**/*.test.ts",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reporter=json-summary tsx --test tests/**/*.test.ts",
    "changeset": "changeset",
    "release": "npm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint:md": "markdownlint '**/*.md'"
  },
  "keywords": [
    "design",
    "linter",
    "cli"
  ],
  "author": "Brett Dorrans <hello@lapidist.net>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/design-lint.git"
  },
  "bugs": {
    "url": "https://github.com/bylapidist/design-lint/issues"
  },
  "homepage": "https://design-lint.lapidist.net",
  "license": "MIT",
  "dependencies": {
    "@lapidist/dtif-parser": "0.4.0",
    "@lapidist/dtif-schema": "0.4.0",
    "@lapidist/dtif-validator": "0.4.0",
    "@vue/compiler-sfc": "3.5.22",
    "ajv": "8.17.1",
    "chalk": "5.6.2",
    "chokidar": "4.0.3",
    "color-name": "2.0.2",
    "color-string": "2.1.2",
    "commander": "14.0.1",
    "cosmiconfig": "9.0.0",
    "cosmiconfig-typescript-loader": "6.1.0",
    "culori": "4.0.2",
    "flat-cache": "6.1.14",
    "globby": "14.1.0",
    "ignore": "7.0.5",
    "leven": "4.1.0",
    "p-limit": "7.1.1",
    "picomatch": "4.0.3",
    "postcss": "8.5.6",
    "postcss-less": "6.0.0",
    "postcss-scss": "4.0.9",
    "postcss-value-parser": "4.2.0",
    "svelte": "5.39.6",
    "tempy": "3.1.0",
    "typescript": "5.9.2",
    "write-file-atomic": "6.0.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@types/color-name": "2.0.0",
    "@types/culori": "4.0.1",
    "@types/node": "24.5.2",
    "@types/picomatch": "4.0.2",
    "@types/postcss-less": "4.0.6",
    "@types/write-file-atomic": "4.0.3",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "c8": "10.1.3",
    "eslint": "9.36.0",
    "markdownlint": "0.38.0",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "vitepress": "1.6.4"
  },
  "c8": {
    "check-coverage": true,
    "branches": 75,
    "functions": 75,
    "lines": 80,
    "statements": 80
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
